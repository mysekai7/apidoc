{
  "manifest_version": 3,
  "name": "API Doc Recorder",
  "version": "1.0.0",
  "description": "Record API traffic and generate documentation with apidoc",
  "permissions": ["storage", "unlimitedStorage"],
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
